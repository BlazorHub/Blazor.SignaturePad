@inherits ChildComponent<SignaturePadFooter>

@if (!string.IsNullOrWhiteSpace(Image))
{
    <label>
        <img id="signature-pad--pen" 
             src="@Image" 
             width="@ImageWidth" 
             height="@ImageHeight" 
             class="signature-pad--pen @Class" 
             style="@Style"
             @attributes="@ExtraAttributes" />
        <input type="color" class="signature-pad--pen-color" id="signature-pad--pen-color" />
    </label>
}
else if (ChildContent != null)
{
    <label>
        <div id="signature-pad--pen" 
             class="signature-pad--pen @Class" 
             style="@Style"
             @attributes="@ExtraAttributes">
            @ChildContent
        </div>
        <input type="color" class="signature-pad--pen-color" id="signature-pad--pen-color" />
    </label>
}